# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.EnvisionController.index(userId: String ?= null, secret: String ?= null)
POST	/							controllers.EnvisionController.postIndex

GET		/api/models					controllers.EnvisionController.getModels(userId: String ?= null, secret: String ?= null)
GET		/api/models/:modelId		controllers.EnvisionController.getModel(modelId: String, userId: String ?= null, secret: String ?= null)
PUT		/api/models/:modelId		controllers.EnvisionController.putModel(modelId: String, userId: String ?= null, secret: String ?= null)
DELETE	/api/models/:modelId		controllers.EnvisionController.deleteModel(modelId: String, userId: String ?= null, secret: String ?= null)
POST	/api/models					controllers.EnvisionController.postModel(userId: String ?= null, secret: String ?= null)

# Map static resources from the /public folder to the /assets URL path
GET     /*file               controllers.Assets.versioned(path="/public", file: Asset)

	